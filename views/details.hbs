{{#with book}}
  <section class="details-page">
    <h1>Details</h1>

    <article class="details-card">

      <article class="details-card-text">
        <h2>Title: {{title}}</h2>
        <h3>Author: {{author}}</h3>
        <h3>Stars: {{stars}}</h3>
        <h3>Genre: {{genre}}</h3>
        <h3>Review: {{review}}</h3>

        <!-- If there is no registered user, do not display buttons-->
        {{#if hasUser}}
        <div class="buttons">
          {{#if isOwner}}
            <a href="/catalog/{{_id}}/edit" class="btn-edit">Edit</a>
            <a href="/catalog/{{_id}}/delete" class="btn-delete">Delete</a>
          {{else}}
            {{#if isBooked}}
              <p class="wish-pub">You already added the book to your wish list</p>
            {{else}}
              <a href="/catalog/{{_id}}/book" class="btn-wish">Wish to read</a>
            {{/if}}
          {{/if}}
          {{/if}}
        </div>

      </article>

      <article class="details-card-image">
        <img src="{{imageUrl}}" />
      </article>

    </article>
  </section>
{{/with}}